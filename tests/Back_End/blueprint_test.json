{
  "name": "Temperature Sensor Emulator",
  "description": "Simulates a temperature sensor device for testing purposes.",
  "configuration": {
    "protocol": "MQTT",
    "connection": {
      "type": "tcp",
      "port": 1883,
      "host": "192.168.0.10"
    },
    "settings": {
      "polling_frequency": "1Hz",
      "threshold": {
        "min": -40,
        "max": 100
      }
    },
    "commands": [
      {
        "name": "start",
        "description": "Start the device emulation."
      },
      {
        "name": "stop",
        "description": "Stop the device emulation."
      }
    ],
    "data_format": {
      "type": "json",
      "schema": {
        "temperature": "float",
        "timestamp": "ISO8601"
      }
    },
    "default_state": {
      "state": "idle",
      "last_updated": "2025-01-19T10:30:00Z"
    }
  },
  "metadata": {
    "version": "1.0",
    "author": "System",
    "created_at": "2025-01-19T10:30:00Z"
  }
}

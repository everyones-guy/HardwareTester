# General Settings
FLASK_ENV=development           # Flask environment: development, testing, or production
SECRET_KEY=your-secret-key      # Secret key for session management and CSRF protection
FLASK_APP=runserver.py

# Network Settings
HOST=127.0.0.1
PORT=5000
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///app.db   # Database URI (e.g., PostgreSQL, MySQL, or SQLite)
                                # Example for PostgreSQL: postgresql://user:password@localhost/db_name
                                # Example for MySQL: mysql+pymysql://user:password@localhost/db_name

# Upload Settings
UPLOAD_FOLDER=uploads           # Directory where uploaded files will be stored
MAX_CONTENT_LENGTH=16777216     # Maximum upload size in bytes (16 MB)

# Allowed File Extensions
ALLOWED_SPEC_SHEET_EXTENSIONS=pdf,docx,xlsx  # Allowed extensions for spec sheets
ALLOWED_TEST_PLAN_EXTENSIONS=pdf,csv,txt     # Allowed extensions for test plans

# Logging and Debugging
DEBUG=True                      # Enable debug mode (True/False)

# Flask-SQLAlchemy Settings
SQLALCHEMY_TRACK_MODIFICATIONS=False  # Disable modification tracking for better performance


